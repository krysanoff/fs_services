{% extends '::base_admin.html.twig' %}
{% block title %}Content manager page || Employee{% endblock %}

{% block pagetitle %}Employee{% endblock %}

{% block content %}
    <div class="col-md-6">
        <div class="card">

        {% if employee %}
            <h3 class="card-pagetitle">Employee Form</h3>

            <div class="card-body">
                {{ include('flash-messages.html.twig') }}

                {{ form_start(form, {'name': 'employee_editor', 'method': 'post', 'attr': { 'autocomplete': 'off' } }) }}

                {{ form_row(form.lastname) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.middlename) }}
                {{ form_row(form.position) }}
                {{ form_row(form.rank) }}
                {{ form_row(form.shift) }}
                {{ form_row(form.id) }}

                {{ form_end(form) }}

                <div class="card-footer">
                    <a href="{{ path('admin_user_delete', {'user': employee.id}) }}" class="btn btn-block btn-lg btn-danger">DELETE</a>
                </div>
            </div>


        {% else %}
            <div class="caveat alert-warning">
                <p>Пользователь с данным id не найден.</p>
                <p>Посмотреть список всех пользователей можно на этой
                    <a href="{{ path('admin_users_page') }}">странице</a></p>
            </div>
        {% endif %}

        </div>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}
