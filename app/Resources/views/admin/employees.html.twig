{% extends '::base_admin.html.twig' %}
{% block title %}{{ "site.name" | trans([], 'main')}} || {{ "employees.title" | trans([], 'admin')}}{% endblock %}

{% block pagetitle %}{{ 'employees.pagetitle' | trans({}, 'admin') }}{% endblock %}

{% block content %}
        {% if employees %}
            <div class="col-md-9">
                <div class="card">
                    <h3 class="card-pagetitle">{{ 'employees.table.title' | trans({}, 'admin') }}</h3>
                    {{ include('flash-messages.html.twig') }}
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>{{ 'employees.table.fullname' | trans({}, 'admin') }}</th>
                                    <th>{{ 'employees.table.position' | trans({}, 'admin') }}</th>
                                    <th>{{ 'employees.table.rank' | trans({}, 'admin') }}</th>
                                    <th>{{ 'employees.table.shift' | trans({}, 'admin') }}</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for employee in employees %}
                                <tr>
                                    <td>{{ employee.lastname }} {{ employee.firstname }} {{ employee.middlename }}</td>
                                    <td>{{ employee.position }}</td>
                                    <td>{{ employee.rank }}</td>
                                    <td>{{ employee.shift }}</td>
                                    <td>
                                        <a href="{{ path('admin_employee', {'employee': employee.id}) }}">
                                            <span class="fa fa-lg fa-edit"></span>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_employee_delete', {'employee': employee.id}) }}">
                                            <span class="fa fa-lg fa-remove"></span>
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                            {% endfor %}
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('admin_employee_new') }}" class="user__actions btn btn-block btn-lg btn-success">
                            <span class="fa fa-lg fa-newuser"></span>
                            {{ 'employee.button.add' | trans({}, 'admin') }}
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
{% endblock %}

{% block javascripts %}

{% endblock %}
