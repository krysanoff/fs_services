{% extends '::base_admin.html.twig' %}
{% block title %}Content manager page || Administrators{% endblock %}

{% block pagetitle %}Administrators{% endblock %}

{% block content %}
    <div class="col-md-6">
        <div class="card">
            {{ include('flash-messages.html.twig') }}
            <h3 class="card-title">Administators Table</h3>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ user.username }}</td>
                        <td>
                            <a href="{{ path('admin_user', {'user': user.id}) }}" class="">
                                <span class="fa fa-lg fa-edit"></span>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('admin_user_delete', {'user': user.id}) }}" class="">
                                <span class="fa fa-lg fa-remove"></span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="user_add">
                <a href="{{ path('admin_user_add') }}" class="user__actions btn btn-block btn-lg btn-success"><span class="glyphicon glyphicon-plus"></span> Add user</a>
            </div>
        </div>
    </div>


{% endblock %}
